/* Reverse an Array 


*/

static int[] arr = { 2, 4, 5, 67, 87 };

	public static void main(String[] args) {

		for (int i = arr.length - 1; i >= arr.length / 2; i--) {
			int temp = arr[i];
			arr[i] = arr[arr.length - (i + 1)];
			arr[arr.length - (i + 1)] = temp;

		}
		for (int arr1 : arr) {
			System.out.println(arr1);
		}

	}
